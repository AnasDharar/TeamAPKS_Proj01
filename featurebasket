      background-attachment: fixed;
      background-color: #000;
      overflow-x: hidden;
    }
    .scroll-section {
      height: 500vh;
      position: relative;
      z-index: 1;
    }
    /* Pinned section for the cards */
    #about-capability-cards {
      position: relative;
      width: 100vw;
      height: 100vh;
      margin: 0 auto;
      z-index: 3;
    }
    /* Wrapper for each card (for continuous bobbing) */
    .card-wrapper {
      position: absolute;
      /* width: 325px; 
      height: 350px; */
      width: 22vw;
      height: 25vw;
      top: 50%;
      left: 50%;
      transform: translate(-50%, 0);
    }
    /* Glass-style card (your original style) */
    .about-capability-card {
      width: 100%;
      height: 100%;
      transform-style: preserve-3d;
      background: rgba(255, 255, 255, 0.2);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      font-size: 1.5rem;
      font-weight: bold;
      color: #fff;
      text-align: center;
      padding: 20px;
    }
    /* Bag container (stays on top) */
    .bag-container {
      /* border: 1px solid black; */
      position: fixed;
      bottom: -10vw;
      left: 60vw;
      transform: translateX(-50%);
      height: 50vh;
      width: 50vw;
      z-index: 5;
      display: block;
    }
    .bag-container img {
      width: 30vw;
      height: auto;
      pointer-events: none;
      position: absolute;
    }
